<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>

            <item android:bottom="0dp" android:right="2dp" android:left="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowColor"/>
                    <corners android:radius="7dp"/>
                </shape>
            </item>

            <item android:bottom="2dp" android:top="2dp" android:right="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FCFCFC"/>
                    <corners android:radius="7dp"/>
                    <stroke android:color="@color/strokeColor"
                            android:width="1dp"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:bottom="2dp" android:top="2dp" android:right="2dp" android:left="2dp">
            <solid android:color="@color/pressColor"/>
            <corners android:radius="7dp"/>
            <stroke android:color="@color/strokeColor"
                    android:width="1dp"/>
        </shape>
    </item>

</selector>