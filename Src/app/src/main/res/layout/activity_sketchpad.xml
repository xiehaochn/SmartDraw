<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        layout="@layout/view_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp">

        <ImageButton
            android:id="@+id/pen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="pen"

            android:src="@mipmap/icon_huabi"

            android:background="@drawable/btn_tools"
            android:layout_margin="2dp"
            />

        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="eraser"

            android:background="@drawable/btn_tools"
            android:src="@mipmap/icon_xiangpi"

            android:layout_margin="2dp"
            />

        <ImageButton
            android:id="@+id/color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="color"

            android:src="@mipmap/icon_xuanse"

            android:layout_margin="2dp"
            android:background="@drawable/btn_tools"
            />

        <ImageButton
            android:id="@+id/undo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="undo"

            android:src="@mipmap/icon_huitui"

            android:layout_margin="2dp"
            android:background="@drawable/btn_tools"
            />

        <ImageButton
            android:id="@+id/redo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="redo"

            android:src="@mipmap/icon_qianjin"
            android:background="@drawable/btn_tools"

            android:layout_margin="2dp"
            />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clear"

            android:src="@mipmap/icon_sanchu"

            android:layout_margin="2dp"
            android:background="@drawable/btn_tools"
            />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="save"

            android:src="@mipmap/icon_save"
            android:background="@drawable/btn_tools"

            android:layout_margin="2dp"
            />

    </LinearLayout>
        <com.smartdraw.dijay.View.DoodleView
            android:id="@+id/doodleView"
            android:layout_above="@id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>
